<div class="col-12 col-lg-6">
  <h3 class="dash-container-heading">My Pokemons</h3>
  <div class="dash-container" id="discover-new" style= "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://freepngimg.com/thumb/pokemon/37475-6-pikachu-transparent-image.png)">
    <div id="discover-new-content">
      <h1>Do You Want to Rent Out Your Pokemon?</h1>
      <div><%= link_to "Add New Pokemon", new_pokemon_path, class: "btn btn-primary"%></div>
    </div>
  </div>
</div>

<div class="col-12 col-lg-6">
  <h3 class="dash-container-heading">My Pokemon Bookings</h3>
  <div class="dash-container">
    <% bookings.each do |booking|%>
    <% if booking.pokemon.kind.name == "water" %>
      <figure class="card card--water">
      <% elsif booking.pokemon.kind.name == "fire" %>
      <figure class="card card--fire">
        <% elsif booking.pokemon.kind.name == "electro" %>
      <figure class="card card--electric">
        <% elsif booking.pokemon.kind.name == "rock" %>
      <figure class="card card--normal">
        <% elsif booking.pokemon.kind.name == "poison" %>
      <figure class="card card--dark">
        <% elsif booking.pokemon.kind.name == "fairy" %>
      <figure class="card card--fairy">
        <% elsif booking.pokemon.kind.name == "grass" %>
      <figure class="card card--grass">
        <% elsif booking.pokemon.kind.name == "ground" %>
      <figure class="card card--normal">
        <% elsif booking.pokemon.kind.name == "normal" %>
      <figure class="card card--ice">
        <% else booking.pokemon.kind.name == "bug" %>
      <figure class="card card--psychic">
    <% end %>

        <div class="card__image-container">
          <%= cl_image_tag booking.pokemon.photo.key, crop: :fill, class:"card__image" %>
        </div>

        <figcaption class="card__caption">
          <h1 class="card__name"><%= link_to booking.pokemon.name, pokemon_path(booking.pokemon) %></h1>
          <h3 class="card__type"><%= booking.pokemon.kind.name %></h3>
        <table class="card__stats">
          <tbody>
           <tr>
            <th>From:</th>
            <td><%= booking.start_date %></td>
          </tr>
          <tr>
            <th>Till:</th>
            <td><%= booking.end_date%></td>
          </tr>
          <tr>
            <th>Owner:</th>
            <td><%= booking.pokemon.user.email %></td>
          </tr>
        </tbody></table>
        </figcaption>
      </figure>
  <% end %>
  <div><%= link_to "Discover New Pokemon", root_path, class: "btn btn-primary"%></div>
  </div>
</div>
