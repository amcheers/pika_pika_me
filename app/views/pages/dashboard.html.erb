<div class="dash-bg" class="footer-sticky">
  <div class="dash-nav">
    <h1 id="dashboard-heading">My Dashboard</h1>

    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">My Pokemon Bookings</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">My Pokemon</a>
      </li>
    </ul>

    <h4 class="dash-date"><%= @date.to_formatted_s(:long) %></h4>
  </div>


  <div class="dash-content-container">
    <div class="tab-content" id="pills-tabContent">

      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <%= render "pages/dashboard_partials/bookings", bookings: @bookings, upcoming: @upcoming, past: @past %>
      </div>

      <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        <%= render "pages/dashboard_partials/my_pokemon", owned_pokemons: @owned_pokemons %>
      </div>
    </div>

  </div>
</div>

