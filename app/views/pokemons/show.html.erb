      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "pikame.png", class: "logo" %>
        <% end %>
    </d>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "btn btn-info"%>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Dashboard", dashboard_path, class: "btn btn-info" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://thetreeparty.nl/wp-content/uploads/2018/05/avatar-placeholder-300x300.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Wishlist", "#", class: "dropdown-item" %>
              <%= link_to "My Profile", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "btn btn-info" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>


<div class="background-show">
  <div class="map-results-container ">
    <div class="col-12 col-lg-6">
      <div class="container2">
        <div class="pokemon-results">
          <div class="pokemon-container">
            <h2><%= @pokemon.name %></h2>
            <p><i><%= @pokemon.pokemon_class %></i></p>
            <p><%= @pokemon.description%></p>
            <p>Price: <%= @pokemon.price_per_day %>
            <p>Address: <%= @pokemon.user.address %></p>
            <p>Owner: <%= @pokemon.user.first_name %> <%= @pokemon.user.last_name %></p>
          </div>
          <div class="pokemon-photo">
            <%= cl_image_tag @pokemon.photo.key %>
          </div>

          <div class="form-wrapper" style="width: 200px; margin: 0 auto;">
            <%= simple_form_for [@pokemon, @booking] do |f| %>
              <%= f.input :start_date, as: :string, required: false, input_html: { id: "range_start" } %>
              <%= f.input :end_date, as: :string, required: false, input_html: { id: "range_end" } %>
              <%= f.button :submit, "Book", class: "btn btn-danger" %>
            <% end %>
            <%= link_to "Back", pokemons_path, class: "btn btn-danger mt-5" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-6 position: sticky;">
      <div id='map' style='width: 50vw; height: 100vh; position: sticky; top: 0;'></div>
      <script>
        mapboxgl.accessToken = 'pk.eyJ1IjoiYWNoZWVycyIsImEiOiJja2g3bnJobWUwOTB6MnBuenVuYW80emowIn0.9aQqGyFOHUbtAMoN9eCZIg';
        var map = new mapboxgl.Map({
        container: 'map',
        style: 'mapbox://styles/mapbox/streets-v11', // stylesheet location
        center: ["<%=@markers[:long]%>","<%=@markers[:lat]%>"], // starting position [lng, lat]
        zoom: 9 // starting zoom
        });
        map.addControl(new mapboxgl.NavigationControl(), "top-left");
var marker = new mapboxgl.Marker().setLngLat(["<%=@markers[:long]%>","<%=@markers[:lat]%>"]).addTo(map);
      </script>
    </div>
  </div>
</div>

