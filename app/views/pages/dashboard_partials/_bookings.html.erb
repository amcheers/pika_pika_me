<% if bookings.count >= 1 %>
<div class="dash-container">
  <% if (upcoming.count >= 1) == false  %>
  <h1 class="mb-30 text-white">You don't have any upcoming Bookings.</h1>
  <div>
    <%= link_to "Discover new Pokemons", root_path, class: "btn btn-poke"%>
    <div class="add-poke-image">
      <img src="https://freepngimg.com/thumb/pokemon/37475-6-pikachu-transparent-image.png" alt="">
    </div>
  </div>
  <% else %>
  <h3 class="dash-container-heading">My Upcoming Bookings</h3>
  <% upcoming.each do |booking|%>
  <% if booking.pokemon.pokemon_class == "water" %>
  <figure class="card card--water">
    <% elsif booking.pokemon.pokemon_class == "fire" %>
    <figure class="card card--fire">
      <% elsif booking.pokemon.pokemon_class == "electro" %>
      <figure class="card card--electric">
        <% elsif booking.pokemon.pokemon_class == "rock" %>
        <figure class="card card--normal">
          <% elsif booking.pokemon.pokemon_class == "poison" %>
          <figure class="card card--dark">
            <% elsif booking.pokemon.pokemon_class == "fairy" %>
            <figure class="card card--fairy">
              <% elsif booking.pokemon.pokemon_class == "grass" %>
              <figure class="card card--grass">
                <% elsif booking.pokemon.pokemon_class == "ground" %>
                <figure class="card card--normal">
                  <% elsif booking.pokemon.pokemon_class == "normal" %>
                  <figure class="card card--ice">
                    <% else booking.pokemon.pokemon_class == "bug" %>
                    <figure class="card card--psychic">
                      <% end %>

                      <div><%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?"} do %>
                        <div class="trash-icon"><i class="fas fa-trash"></i></div>
                        <% end %>

                        <div class="card__image-container">
                          <%= cl_image_tag booking.pokemon.photo.key, crop: :fill, class:"card__image" %>
                        </div>

                        <figcaption class="card__caption">
                          <h1 class="card__name"><%= link_to booking.pokemon.name, pokemon_path(booking.pokemon) %></h1>
                          <h3 class="card__type"><%= booking.pokemon.pokemon_class %></h3>
                          <div class="card__stats">
                            <p class="owner-info"><i>Owned By <%= booking.pokemon.user.first_name %></i></p>
                            <p class="booking-info"><i class="far fa-calendar-alt"></i>  <%= booking.start_date.to_formatted_s(:short) %></b> to <%= booking.end_date.to_formatted_s(:short)%></p>
                          </div>
                        </figcaption>
                      </figure>
                      <% end %>
                      <% end %>
                    </div>

                    <div><%= link_to "Discover New Pokemon", root_path, class: "btn btn-poke"%></div>
                    <% if past.count >= 1 %>
                    <div class="dash-container">
                      <h3 class="dash-container-heading">My Past Bookings</h3>
                      <% past.each do |booking|%>
                      <% if booking.pokemon.pokemon_class == "water" %>
                      <figure class="card card--water">
                        <% elsif booking.pokemon.pokemon_class == "fire" %>
                        <figure class="card card--fire">
                          <% elsif booking.pokemon.pokemon_class == "electro" %>
                          <figure class="card card--electric">
                            <% elsif booking.pokemon.pokemon_class == "rock" %>
                            <figure class="card card--normal">
                              <% elsif booking.pokemon.pokemon_class == "poison" %>
                              <figure class="card card--dark">
                                <% elsif booking.pokemon.pokemon_class == "fairy" %>
                                <figure class="card card--fairy">
                                  <% elsif booking.pokemon.pokemon_class == "grass" %>
                                  <figure class="card card--grass">
                                    <% elsif booking.pokemon.pokemon_class == "ground" %>
                                    <figure class="card card--normal">
                                      <% elsif booking.pokemon.pokemon_class == "normal" %>
                                      <figure class="card card--ice">
                                        <% else booking.pokemon.pokemon_class == "bug" %>
                                        <figure class="card card--psychic">
                                          <% end %>

                                          <div class="card__image-container">
                                            <%= cl_image_tag booking.pokemon.photo.key, crop: :fill, class:"card__image" %>
                                          </div>

                                          <figcaption class="card__caption">
                                            <h1 class="card__name"><%= link_to booking.pokemon.name, pokemon_path(booking.pokemon) %></h1>
                                            <h3 class="card__type"><%= booking.pokemon.pokemon_class %></h3>
                                            <div class="card__stats">
                                              <p class="owner-info"><i>Owned By <%= booking.pokemon.user.first_name %></i></p>
                                              <p class="booking-info">Booked from <b><%= booking.start_date.to_formatted_s(:short) %></b> until <%= booking.end_date.to_formatted_s(:short)%></p>
                                              <p><%= link_to "Write a review", new_booking_review_path(booking) %></p>
                                            </div>
                                          </figcaption>
                                        </figure>
                                        <% end %>


                                      </div>
                                        <% end %>


                                      <% else %>

                                      <h1 class="mb-30 text-white">You don't have any Bookings yet.</h1>
                                      <div>
                                        <%= link_to "Discover new Pokemons", root_path, class: "btn btn-poke"%>
                                        <div class="add-poke-image">
                                          <img src="https://freepngimg.com/thumb/pokemon/37475-6-pikachu-transparent-image.png" alt="">
                                        </div>
                                      </div>
                                      <% end %>
