<% if owned_pokemons.count >= 1 %>
    <div class="grid">
     <% owned_pokemons.each do |pokemon| %>
      <% if pokemon.pokemon_class == "water" %>
        <figure class="card card--water">
      <% elsif pokemon.pokemon_class == "fire" %>
        <figure class="card card--fire">
      <% elsif pokemon.pokemon_class == "electro" %>
        <figure class="card card--electric">
      <% elsif pokemon.pokemon_class == "rock" %>
        <figure class="card card--normal">
      <% elsif pokemon.pokemon_class == "poison" %>
        <figure class="card card--dark">
      <% elsif pokemon.pokemon_class == "fairy" %>
        <figure class="card card--fairy">
      <% elsif pokemon.pokemon_class == "grass" %>
        <figure class="card card--grass">
      <% elsif pokemon.pokemon_class == "ground" %>
        <figure class="card card--normal">
      <% elsif pokemon.pokemon_class == "normal" %>
        <figure class="card card--ice">
      <% else pokemon.pokemon_class == "bug" %>
        <figure class="card card--psychic">
      <% end %>

    <div class="edit-btn"><%= link_to "Edit", edit_pokemon_path(pokemon), class: "btn btn-light"%></div>
    <div><%= link_to pokemon_path(pokemon), method: :delete, data: { confirm: "Are you sure?"} do %>
      <div class="trash-icon"><i class="fas fa-trash"></i></div>
    <% end %>
    </div>

     <div class="card__image-container">
      <%= cl_image_tag pokemon.photo.key, crop: :fill, class:"card__image" %>
    </div>

    <figcaption class="card__caption">
      <h1 class="card__name"><%= link_to pokemon.name, pokemon_path(pokemon) %></h1>
      <h3 class="card__type"><%= pokemon.pokemon_class %></h3>
    </figcaption>
  </figure>
    <% end %>
    <div><%= link_to "Add New Pokemon", new_pokemon_path, class: "btn btn-poke"%></div>
    </div>

<% else %>

<div class="">
  <h1 class="mb-30 text-white">You haven't uploaded any Pokemons yet.</h1>
  <div>
      <%= link_to "Add New Pokemon", new_pokemon_path, class: "btn btn-poke"%>
      <div class="add-poke-image">
        <img src="https://freepngimg.com/thumb/pokemon/37475-6-pikachu-transparent-image.png" alt="">
      </div>
</div>
<% end %>
