<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <d class="logo-nav d-flex">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "pikame.png", class: "logo" %>
      <% end %>
  </d>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "btn btn-info"%>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Dashboard", dashboard_path, class: "btn btn-info" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://thetreeparty.nl/wp-content/uploads/2018/05/avatar-placeholder-300x300.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Wishlist", "#", class: "dropdown-item" %>
            <%= link_to "My Profile", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-info" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="background-new">
<%= simple_form_for @pokemon do |f| %>
<figure class="card card--water">
  <div class="card__image-container">
    <%= f.input :photo, as: :file, label: false %>
  </div>

  <figcaption class="card__caption">
    <h1 class="card__name">
      <%= f.input :name, label: false, :input_html => { :style=> "width: 80px; border-radius: 5px"}, :placeholder => "Add Name" %>
    </h1>

    <h3 class="card__type">
      <%= f.input :pokemon_class, label: false, :input_html => { :style=> "width: 80px; border-radius: 5px"}, :placeholder => "Add Type" %>
    </h3>

    <table class="card__stats">
      <tbody><tr>
        <%= f.input :description, label: false, :placeholder => "Add Description", :input_html => { :style=> "width: 270px; border-radius: 5px"} %>
    </tbody></table>

    <div class="card__abilities">
      <h4 class="card__ability">
        <span class="card__label"></span>
        <%= f.submit 'Create', class: 'btn-pokemon-new'%>
      </h4>
      <h4 class="card__ability">
        <span class="card__label">
        </span>
        <%= f.input :price_per_day, label: false, :placeholder => "Add Price", :input_html => { :style=> "width: 120px; border-radius: 5px"}%>
      </h4>
    </div>
  </figcaption>
</figure>
<% end %>
</div>
